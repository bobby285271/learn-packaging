mkdir -p "${PKGDIR}/usr/share/bash-completion/completions/"
mkdir -p "${PKGDIR}/usr/share/fish/completions/"
mkdir -p "${PKGDIR}/usr/share/zsh/functions/Completion/Zsh/"
install -Dm644 "${SRCDIR}/completions/zola.bash" "${PKGDIR}/usr/share/bash-completion/completions/zola"
install -Dm644 "${SRCDIR}/completions/zola.fish" "${PKGDIR}/usr/share/fish/completions/zola.fish"
install -Dm644 "${SRCDIR}/completions/_zola" "${PKGDIR}/usr/share/zsh/functions/Completion/Zsh/_zola"
