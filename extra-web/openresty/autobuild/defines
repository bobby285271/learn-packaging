PKGNAME=openresty
PKGSEC=net
PKGDEP="openssl pcre perl readline libatomic-ops libxslt libgd"
PKGDES="A distribution of Nginx bundled with many other modules"

AUTOTOOLS_STRICT=0
AUTOTOOLS_AFTER="--prefix=/usr/lib/openresty \
                 --conf-path=/etc/openresty/nginx/conf/nginx.conf \
                 --with-http_ssl_module \
                 --with-http_iconv_module \
                 --with-http_postgres_module \
                 --with-luajit= \
                 --with-libpq=/usr \
                 --user=http \
                 --group=http \
                 --with-select_module \
                 --with-poll_module \
                 --with-file-aio \
                 --with-ipv6 \
                 --with-http_realip_module \
                 --with-http_addition_module \
                 --with-http_xslt_module \
                 --with-http_image_filter_module \
                 --with-http_geoip_module \
                 --with-http_sub_module \
                 --with-http_dav_module \
                 --with-http_flv_module \
                 --with-http_gzip_static_module \
                 --with-http_auth_request_module \
                 --with-http_random_index_module \
                 --with-http_secure_link_module \
                 --with-http_degradation_module \
                 --with-http_stub_status_module \
                 --with-http_perl_module \
                 --with-perl=/usr/bin/perl \
                 --with-mail \
                 --with-mail_ssl_module \
                 --with-cpp_test_module \
                 --with-pcre \
                 --with-pcre-jit \
                 --with-md5-asm \
                 --with-sha1-asm \
                 --with-libatomic"
ABSHADOW=0
