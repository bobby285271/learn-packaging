PKGNAME=lapack
PKGDES="Lapack and BLAS Linear Algebra library"
PKGSEC=libs
PKGDEP="gcc-runtime"
BUILDDEP="doxygen"

CMAKE_AFTER="-DBUILD_SHARED_LIBS=ON \
             -DCMAKE_Fortran_COMPILER=gfortran \
             -DLAPACKE=ON \
             -DLAPACKE_WITH_TMG=ON \
             -DCBLAS=ON \
             -DBUILD_DEPRECATED=ON"
AB_FLAGS_SPECS=0
AB_FLAGS_O3=1
NOLTO=1
ABTYPE=cmake
