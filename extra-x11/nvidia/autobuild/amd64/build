    "$PKGDIR"/usr/lib/nvidia/xorg/libglxserver_nvidia.so.1
ln -sv "libglxserver_nvidia.so.$PKGVER" \
    "$PKGDIR"/usr/lib/nvidia/xorg/libglxserver_nvidia.so
