rm "$PKGDIR"/opt/stackless/bin/2to3

# Tinglin' around man pages.
mkdir -p "$PKGDIR"/usr
mv "$PKGDIR"/opt/stackless/share "$PKGDIR"/usr/
rm "$PKGDIR"/usr/share/man/man1/python3.1
mv "$PKGDIR"/usr/share/man/man1/{,stackless-}python3.7.1
ln -s stackless-python3.7.1 "$PKGDIR"/usr/share/man/man1/stackless-python3.1
