PKGNAME=stackless-3
PKGSEC=python
PKGDEP="bzip2 expat gdbm libffi openssl zlib stackless-env"
BUILDDEP="python-2 tk"
PKGDES="A C stack-call-less Python programming language interpreter"

AUTOTOOLS_AFTER="--with-threads \
                 --enable-ipv6 \
                 --with-system-expat \
                 --with-system-ffi \
                 --with-signal-module \
                 --enable-unicode=ucs4 \
                 --enable-stacklessfewerregisters \
                 --enable-shared"
AB_FLAGS_SPECS=0
AB_FLAGS_PIC=1
