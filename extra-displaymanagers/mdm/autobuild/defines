PKGNAME=mdm
PKGSEC=x11
PKGDEP="dbus-glib gtk-2 libart-lgpl libgnomecanvas librsvg libxml2 linux-pam xorg-server webkitgtk zenity"
BUILDDEP="autoconf automake gnome-common gnome-doc-utils intltool libtool popt"
PKGDES="Mint Display Manager - a fork of GDM2"

AUTOTOOLS_AFTER="--libexecdir=/usr/lib/mdm \
                 --enable-ipv6 \
                 --with-prefetch \
                 --with-xevie \
                 --disable-compile-warnings \
                 --without-console-kit"
MAKE_AFTER="prefix=/usr"
ABSHADOW=no
