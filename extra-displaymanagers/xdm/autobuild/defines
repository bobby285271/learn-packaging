PKGNAME=xdm
PKGSEC=x11
PKGDEP="linux-pam xorg-server systemd"
PKGDES="X Display Manager"

AUTOTOOLS_AFTER="--with-xdmlibdir=/usr/libexec \
                 --with-xdmconfigdir=/etc/X11/xdm \
                 --with-xdmscriptdir=/etc/X11/xdm \
                 --with-pixmapdir=/usr/share/xdm/pixmaps \
                 --enable-xdmshell"
