PKGNAME=inetutils
PKGDES="Internet utils"
PKGSEC=utils
PKGDEP="glibc iana-etc linux-pam"
AUTOTOOLS_AFTER="--libexec=/usr/bin --without-wrap --with-pam \
--enable-ftp --enable-ftpd --enable-telnet --enable-telnetd --enable-talk \
--enable-talkd --enable-rlogin --enable-rlogind --enable-rsh --enable-rshd \
--enable-rcp --enable-hostname --enable-dnsdomainname --enable-rexec \
--enable-rexecd --enable-tftp --enable-tftpd --enable-ping --enable-ping6 \
--disable-logger --disable-syslogd --enable-inetd --enable-whois --disable-uucpd --disable-ifconfig"
