mkdir -p "$PKGDIR"/usr/share/icons/mate-window-applets/Arc/{maximize,close,minimize}

cd "$PKGDIR"/usr/share/icons/mate-window-applets/Arc/maximize
ln -sv ../../../../themes/Arc/unity/maximize.svg \
    maximize.svg
ln -sv ../../../../themes/Arc/unity/maximize_focused_prelight.svg \
    maximize_hovered.svg
ln -sv ../../../../themes/Arc/unity/unmaximize.svg \
    unmaximize.svg
ln -sv ../../../../themes/Arc/unity/unmaximize_focused_prelight.svg \
    unmaximize_hovered.svg

cd "$PKGDIR"/usr/share/icons/mate-window-applets/Arc/close
ln -sv ../../../../themes/Arc/unity/close.svg \
    close.svg
ln -sv ../../../../themes/Arc/unity/close_focused_prelight.svg \
    close_hovered.svg

cd "$PKGDIR"/usr/share/icons/mate-window-applets/Arc/minimize
ln -sv ../../../../themes/Arc/unity/minimize.svg \
    minimize.svg
ln -sv ../../../../themes/Arc/unity/minimize_focused_prelight.svg \
    minimize_hovered.svg

cd "$SRCDIR"
