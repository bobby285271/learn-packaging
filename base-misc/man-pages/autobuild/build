cd man-pages-$PKGVER

mkdir -p man0

for sect in 0 1 3; do
    sed -i "/^\.so /s/man${sect}p/man$sect/" "$SRCDIR"/man-pages-posix-2013-a/man${sect}p/*
    mv -iv "$SRCDIR"/man-pages-posix-2013-a/man${sect}p/* man$sect/
done

make install prefix="$PKGDIR"/usr

rm -f "$PKGDIR"/usr/share/man/man1/{chgrp,chmod,chown,cp,dd,df,diff,dir,dircolors,du,install,ln,ls,mkdir,mkfifo,mknod,mv,rm,rmdir,touch,vdir}.1
rm -f "$PKGDIR"/usr/share/man/man3/getspnam.3
rm -f "$PKGDIR"/usr/share/man/man4/{lirc,mouse}.4
rm -f "$PKGDIR"/usr/share/man/man5/{attr,passwd}.5
rm -f "$PKGDIR"/usr/share/man/man3/explicit_bzero.3
rm -f "$PKGDIR"/usr/share/man/man7/keyrings.7
rm -f "$PKGDIR"/usr/share/man/man7/persistent-keyring.7
rm -f "$PKGDIR"/usr/share/man/man7/process-keyring.7
rm -f "$PKGDIR"/usr/share/man/man7/session-keyring.7
rm -f "$PKGDIR"/usr/share/man/man7/thread-keyring.7
rm -f "$PKGDIR"/usr/share/man/man7/user-keyring.7
rm -f "$PKGDIR"/usr/share/man/man7/user-session-keyring.7
