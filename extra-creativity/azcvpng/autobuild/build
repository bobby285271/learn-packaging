make CXXFLAGS="${CPPFLAGS} ${CXXFLAGS} ${LDFLAGS}" \
     LFLAGS="${LDFLAGS}"

install -Dvm755 azcvpng \
    "$PKGDIR"/usr/bin/azcvpng
install -Dvm644 files/ja_JP.axt \
    "$PKGDIR"/usr/share/azcvpng/ja_JP.axt
install -Dvm644 files/azconvpng.desktop \
    "$PKGDIR"/usr/share/applications/azconvpng.desktop
