PKGNAME=azdrawing
PKGSEC=graphics
PKGDEP="fontconfig x11-lib libjpeg-turbo"
PKGDES="Painting software for line art and comics"

NOPARALLEL=1
ABMK="bindir=$PKGDIR/usr/bin datadir=$PKGDIR/usr/share/azdrawing \
      menudir=$PKGDIR/usr/share/applications \
      icondir=$PKGDIR/usr/share/icons/hicolor/48x48/apps \
      prefix=$PKGDIR/usr \
      CXXFLAGS=${CXXFLAGS} LFLAGS=${LDFLAGS}"
MAKE_AFTER="$ABMK"
