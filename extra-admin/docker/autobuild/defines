PKGNAME=docker
PKGSEC=admin
PKGDEP="lxc bridge-utils btrfs-progs iproute2 sqlite systemd \
        libseccomp lvm2"
BUILDDEP="go go-md2man"
PKGDES="Automates deployment of containerized applications"

ABSTRIP=no
AB_FLAGS_SPECS=0

# Adapted from Arch Linux.

_fake_gopath_pushd() {
    mkdir -p "$GOPATH/src/${2%/*}"
    rm -f "$GOPATH/src/$2"
    ln -rsT "$1" "$GOPATH/src/$2"
    pushd "$GOPATH/src/$2" >/dev/null
}

_fake_gopath_popd() {
    popd >/dev/null
}
