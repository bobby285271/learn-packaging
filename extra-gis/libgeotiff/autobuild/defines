PKGNAME=libgeotiff
PKGSEC=science
PKGDEP="libjpeg-turbo libtiff perl proj"
BUILDDEP="doxygen graphviz"
PKGDES="Library for handling TIFF for georeferenced raster imagery"

AUTOTOOLS_AFTER="--with-zlib --with-zip \
                 --with-jpeg --enable-incode-epsg"
PKGPROV="geotiff"
ABSHADOW=0
AB_FLAGS_O3=1

PKGBREAK="gdal<=2.4.2-1 librasterlite<=1.0.0rc0-1"
