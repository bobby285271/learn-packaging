PKGNAME=dosbox
PKGEPOCH=1
PKGSEC=emulation
PKGDEP="sdl-net zlib sdl-sound mesa libpng libpcap alsa-lib glu fluidsynth"
PKGDES="DOSBOX, a DOS emulator"

AUTOTOOLS_AFTER="--sysconfdir=/etc/dosbox --enable-core-inline --enable-opengl --disable-dynamic-core"
ABSHADOW=no

PKGEPOCH=1 #Bumped from dosbox-x

# Takes years.
NOLTO=yes
