export PATH=/opt/32/bin:$PATH
./configure --prefix=/opt/32 \
            --build=i686-pc-linux-gnu \
            --host=i686-pc-linux-gnu \
            --target=i686-pc-linux-gnu \
            ${AUTOTOOLS_AFTER} \
            CC=i686-pc-linux-gnu-gcc
make
make install DESTDIR="$PKGDIR"

rm -fr "$PKGDIR"/opt/32/{bin,share}
