PKGDES="GIMP toolkit version 3 (optenv32)"

AUTOTOOLS_AFTER="--enable-gtk2-dependency \
                 --disable-schemas-compile \
                 --enable-x11-backend \
                 --enable-broadway-backend \
                 --disable-wayland-backend \
                 --disable-introspection \
                 --disable-gtk-doc --disable-cups \
                 --disable-libcanberra --disable-colord \
                 --disable-modules --includedir=/opt/32/include"
ABSHADOW=no
