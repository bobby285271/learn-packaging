mkdir build{,-qt5} || true

pushd build
export QT_SELECT=4
cmake .. \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_DESTINATION=/usr/lib \
    -DUSE_QT4=ON \
    -DQT_QMAKE_EXECUTABLE=/usr/bin/qmake-qt4
make
make install DESTDIR=$PKGDIR
popd

pushd build-qt5
export QT_SELECT=5
cmake .. \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_DESTINATION=/usr/lib \
    -DUSE_QT5=ON
make
make install DESTDIR=$PKGDIR
popd
