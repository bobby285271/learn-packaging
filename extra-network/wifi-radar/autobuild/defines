PKGNAME=wifi-radar
PKGSEC=net
PKGDEP="net-tools pygtk wireless-tools"
PKGDES="A PyGTK based utility for managing Wireless connections"

PKGEPOCH=1
ABTYPE=plainmake
MAKE_AFTER="DESTDIR=$PKGDIR/usr \
            sysconfdir=$PKGDIR/etc \
            mandir=$PKGDIR/usr/share/man \
            bindir=$PKGDIR/usr/bin \
            sbindir=$PKGDIR/usr/bin"
