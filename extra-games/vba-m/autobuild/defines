PKGNAME=vba-m
PKGSEC=games
PKGDEP="gtkglextmm sdl2 sfml wxgtk3 zip"
BUILDDEP="cmake"
PKGDES="A Nintendo GameBoy Advance emulator"

CMAKE_AFTER="-DENABLE_GTK=TRUE \
             -DENABLE_WX=TRUE \
             -DENABLE_DEBUGGER=TRUE \
             -DENABLE_SDL=FALSE \
             -DENABLE_FFMPEG=FALSE \
             -DENABLE_LINK=TRUE"
PKGEPOCH=1

PKGPROV="visualboyadvance-m"
