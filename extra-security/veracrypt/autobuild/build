make TC_EXTRA_LDFLAGS="${LDFLAGS}" \
     TC_EXTRA_CFLAGS="${CPPFLAGS} ${CFLAGS}" \
     TC_EXTRA_CXXFLAGS="${CPPFLAGS} ${CXXFLAGS}"

install -Dm755 Main/veracrypt "$PKGDIR"/usr/bin/veracrypt
install -Dm644 Resources/Icons/VeraCrypt-256x256.xpm \
               "$PKGDIR"/usr/share/pixmaps/veracrypt.xpm
