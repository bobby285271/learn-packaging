PKGNAME=gnome-online-accounts
PKGSEC=gnome
PKGDEP="webkit2gtk json-glib libnotify rest libsecret \
        telepathy-glib krb5 gcr libaccounts-glib cheese"
BUILDDEP="gtk-doc docbook-xsl gobject-introspection intltool \
          libxslt vim vala"
PKGDES="GNOME service to access online accounts"

AUTOTOOLS_STRICT=0
AUTOTOOLS_AFTER="--enable-exchange --enable-facebook \
                 --enable-flickr --enable-google --enable-imap-smtp \
                 --enable-kerberos --enable-owncloud \
                 --enable-windows-live \
                 --enable-lastfm --enable-media-server \
                 --enable-gtk-doc"
