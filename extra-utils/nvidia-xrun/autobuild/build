install -Dvm 755 nvidia-xrun "$PKGDIR"/usr/bin/nvidia-xrun
install -Dvm 644 nvidia-xorg.conf "$PKGDIR"/etc/X11/nvidia-xorg.conf
install -Dvm 644 nvidia-xinitrc "$PKGDIR"/etc/X11/xinit/nvidia-xinitrc
install -dvm 555 "$PKGDIR"/etc/X11/xinit/nvidia-xinitrc.d
install -dvm 555 "$PKGDIR"/etc/X11/nvidia-xorg.conf.d
