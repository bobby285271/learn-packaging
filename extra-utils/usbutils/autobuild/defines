PKGNAME=usbutils
PKGDES="A utility used to display information about USB buses in the system and the devices connected to them"
PKGDEP="libusb hwdata python-2 coreutils zlib"
PKGDEP__RETRO="libusb hwdata coreutils zlib"
PKGDEP__I486="${PKGDEP__RETRO}"
PKGSEC=utils

AUTOTOOLS_AFTER="--datadir=/usr/share/hwdata"
RECONF=0

PKGPROV="lsusb"
