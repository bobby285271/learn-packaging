make

mkdir -p "$PKGDIR"/usr/{bin,share/{uemacs,doc/uemacs/}}

make install DESTDIR=$PKGDIR

install -m644 README "$PKGDIR"/usr/share/doc/uemacs
install -m644 readme.39e "$PKGDIR"/usr/share/doc/uemacs
install -m644 emacs.ps "$PKGDIR"/usr/share/doc/uemacs
install -m644 emacs.rc "$PKGDIR"/usr/share/doc/uemacs
install -m644 UTF-8-demo.txt "$PKGDIR"/usr/share/doc/uemacs
