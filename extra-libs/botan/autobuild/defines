PKGNAME=botan
PKGSEC=libs
PKGDES="C++ cryptography library"
PKGDEP="bash boost asio"
BUILDDEP="python-2 asio git"

AB_FLAGS_SPECS=0
AB_FLAGS_O3=1

CONFOPT="--enable-modules=cvc --with-openssl \
         --with-gnump --with-bzip2 --with-zlib \
         --with-boost-python --with-sphinx"

if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    CONFOPT+=" --enable-sse2"
fi
