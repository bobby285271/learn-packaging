mkdir "$SRCDIR"/build{4,5}

cd build4
cmake .. ${CMAKE_DEF} \
         -DQT_QMAKE_EXECUTABLE=/usr/bin/qmake-qt4 \
         -DBUILD_WITH_QT4=ON \
         ${CMAKE_AFTER}
make
make install DESTDIR="$PKGDIR"

cd ../build5
cmake .. ${CMAKE_DEF} \
         -DBUILD_WITH_QT4=OFF \
         ${CMAKE_AFTER}
make
make install DESTDIR="$PKGDIR"

cd "$SRCDIR"
