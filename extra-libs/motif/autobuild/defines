PKGNAME=motif
PKGSEC=libs
PKGDEP="x11-lib libjpeg-turbo libpng xbitmaps"
PKGDES="The Motif user interface component toolkit"

PKGCONFL="lesstif"
PKGPROV="openmotif"

AUTOTOOLS_AFTER="--disable-printing \
                 --disable-demos \
                 --enable-jpeg \
                 --enable-png \
                 --enable-xft \
                 --with-mwmrcdir=/etc/X11/mwm \
                 --with-xmbinddir=/usr/share/X11/bindings \
                 --with-x11rgbdir=/etc/X11"
NOPARALLEL=1
