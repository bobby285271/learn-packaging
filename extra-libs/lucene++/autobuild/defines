PKGNAME=lucene++
PKGSEC=libs
PKGDEP="boost"
BUILDDEP="cmake"
PKGDES="C++ port of the popular Java Lucene library"

CMAKE_AFTER="-DLIB_DESTINATION=/usr/lib -DBoost_LIBRARY_DIR=/usr/lib \
             -DENABLE_CUSTOM_ALLOCATOR=FALSE \
             -DCMAKE_CXX_FLAGS=-DBOOST_VARIANT_USE_RELAXED_GET_BY_DEFAULT"
PKGEPOCH=1
