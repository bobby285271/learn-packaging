PKGNAME=vigra
PKGSEC=libs
PKGDEP="libpng libtiff openexr bash hdf5 fftw numpy ilmbase"
BUILDDEP="boost cmake doxygen"
if [[ "${CROSS:-$ARCH}" = "amd64" ]]; then
    BUILDDEP+=" sphinx"
fi
PKGDES="A computer vision library"

