PKGNAME=pcre-static
PKGDES="Perl Compatible Regular Expression (static libraries)"
PKGSEC=libs
PKGDEP="pcre"

AUTOTOOLS_AFTER="--enable-utf --enable-unicode-properties --enable-pcregrep-libz \
                 --enable-pcregrep-libbz2 --enable-pcretest-libreadline \
                 --enable-pcre16 --enable-pcre32 --enable-jit \
                 --enable-static --disable-shared"
RECONF=0
NOSTATIC=no
