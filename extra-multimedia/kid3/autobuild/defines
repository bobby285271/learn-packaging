CMAKE_DEF="-DCMAKE_INSTALL_PREFIX=$PREFIX -DCMAKE_BUILD_TYPE=Release -DWITH_QT5=ON -DWITH_APPS='CLI;KDE' -DWITH_FFMPEG=ON -DWITH_GSTREAMER=ON -DWITH_FFMPEG=ON"
