if [[ "${CROSS:-$ARCH}" != "i486" && "${CROSS:-$ARCH}" != "powerpc" ]]; then
    ./configure --prefix=/usr \
                --disable-debug \
                --disable-static \
                --disable-stripping \
                --enable-avisynth \
                --enable-avresample \
                --enable-fontconfig \
                --enable-gnutls \
                --enable-gpl \
                --enable-libass \
                --enable-libbluray \
                --enable-libfreetype \
                --enable-libfribidi \
                --enable-libgsm \
                --enable-libmodplug \
                --enable-libmp3lame \
                --enable-libopencore_amrnb \
                --enable-libopencore_amrwb \
                --enable-libopus \
                --enable-libpulse \
                --enable-libsoxr \
                --enable-libspeex \
                --enable-libssh \
                --enable-libtheora \
                --enable-libv4l2 \
                --enable-libvorbis \
                --enable-libvpx \
                --enable-libx264 \
                --enable-libx265 \
                --enable-libxvid \
                --enable-runtime-cpudetect \
                --enable-shared \
                --enable-swresample \
                --enable-vdpau \
                --enable-version3 \
                --enable-vaapi \
                $MIPSCONF $PPCCONF $LTO
    make
    make tools/qt-faststart
    make install install-man DESTDIR="$PKGDIR"
    install -Dm755 tools/qt-faststart "$PKGDIR"/usr/bin/qt-faststart
elif [[ "${CROSS:-$ARCH}" = "i486" ]]; then
    ./configure --prefix=/usr \
                --disable-debug \
                --disable-static \
                --disable-stripping \
                --enable-avisynth \
                --enable-avresample \
                --enable-fontconfig \
                --enable-gnutls \
                --enable-gpl \
                --enable-libass \
                --disable-libbluray \
                --enable-libfreetype \
                --enable-libfribidi \
                --disable-libgsm \
                --enable-libmodplug \
                --enable-libmp3lame \
                --disable-libopencore_amrnb \
                --disable-libopencore_amrwb \
                --disable-libopus \
                --disable-libpulse \
                --enable-libsoxr \
                --disable-libspeex \
                --disable-libssh \
                --enable-libtheora \
                --disable-libv4l2 \
                --enable-libvorbis \
                --disable-libvpx \
                --enable-libx264 \
                --disable-libx265 \
                --enable-libxvid \
                --enable-runtime-cpudetect \
                --enable-shared \
                --enable-swresample \
                --enable-vdpau \
                --enable-version3 \
                --enable-vaapi \
                --disable-avx \
                --disable-xop \
                --disable-fma3 \
                --disable-fma4 \
                --disable-avx2 \
                --disable-avx512 \
                --disable-aesni
    make
    make install DESTDIR="$PKGDIR"
fi
