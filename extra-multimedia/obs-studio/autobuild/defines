PKGNAME=obs-studio
PKGSEC=video
PKGDEP="ffmpeg jansson libfdk-aac x11-lib libxkbcommon qt-5 curl jack imagemagick mbedtls"
BUILDDEP="cmake x264 swig vlc"
PKGDES="Free, open source software for live streaming and recording"

ABTYPE=cmake
AB_FLAGS_O3=1
CMAKE_AFTER="-DUSE_SSL=ON \
             -DOBS_VERSION_OVERRIDE=${PKGVER}"
FAIL_ARCH="!(amd64)"
