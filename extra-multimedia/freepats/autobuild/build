mkdir -p "$PKGDIR"/usr/share/midi/freepats/{Drum,Tone}_000/
install -m644 "$SRCDIR"/Drum_000/*.pat "$PKGDIR"/usr/share/midi/freepats/Drum_000/
install -m644 "$SRCDIR"/Drum_000/*.txt "$PKGDIR"/usr/share/midi/freepats/Drum_000/
install -m644 "$SRCDIR"/Tone_000/*.pat "$PKGDIR"/usr/share/midi/freepats/Tone_000/
install -m644 "$SRCDIR"/Tone_000/*.txt "$PKGDIR"/usr/share/midi/freepats/Tone_000/
install -Dm644 "$SRCDIR"/crude.cfg  "$PKGDIR"/etc/timidity++/freepats/freepats.cfg
install -Dm644 "$SRCDIR"/README     "$PKGDIR"/usr/share/doc/freepats/README
