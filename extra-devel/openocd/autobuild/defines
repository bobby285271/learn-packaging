PKGNAME=openocd
PKGSEC=devel
PKGDEP="libusb libusb-compat libftdi hidapi"
PKGDES="An open-source JTAG On-Chip Debugging tool"

ABSHADOW=0
AUTOTOOLS_STRICT=0
AUTOTOOLS_AFTER="--enable-static \
                 --disable-shared \
                 --enable-remote-bitbang \
                 --disable-werror \
                 --enable-sysfsgpio \
                 --enable-buspirate"

if [[ "${CROSS:-$ARCH}" = arm* ]]; then
	AUTOTOOLS_AFTER+=" --enable-bcm2835gpio"
fi
